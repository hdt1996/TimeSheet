<section class="vh-100 vw-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7">
          <div class="card d-flex flex-row" style="border-radius: 15px">
            <div class="card-body p-5" style="flex:1.5 !important">
              <h2 class="text-center mb-4">Update Account</h2>

              <%= form_with model: [ @user ], class: "px-md-2", html: { method: :put } do |f| %>  <!-- has_one relationship -->

                <div class="form-outline mb-4">
                  <label class="form-label" >Username</label>
                  <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control form-control-lg"%>
                </div>

                <div class="form-outline mb-4">
                  <%= f.label :email, class: "fntbold" %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.label :password, class: "fntbold" %> <i>(leave blank if you don't want to change it)</i><br />
                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" %>
                  <% if @minimum_password_length %>
                    <em><%= @minimum_password_length %> characters minimum</em>
                  <% end %>
                </div>


                <div class="form-outline mb-4">
                  <%= f.label :current_password, class: "fntbold" %> <i>(we need your current password to confirm your changes)</i><br />
                  <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control form-control-lg" %>
                </div>

                <div class="d-flex justify-content-center">
                    <%= f.submit "Update Account" , class: "btn btn-success btn-block btn-lg gradient-custom-4 text-body"%>
                </div>

              <% end %>
            </div>

            <div class="card-body p-5 d-flex flex-column" style="flex:1.1 !important">
              <h2 class="text-center mb-4">Registration</h2>

              <div class="form-outline mb-4">
                <div class="d-flex justify-content-center align-items-center">
                  <label>Cancel account?</label>
                  <%= button_to "Delete", admin_user_path(:id => @user.id), data: { confirm: "Are you sure? Click OK to proceed." }, method: :delete, 
                  class: "btn btn-danger m-2"%>
                </div>
              </div>
              <div class="flx1 disflxrbr">
                <%= link_to "Back", url_for(:back), class: "btn btn-primary btn-block btn-lg gradient-custom-4"%>
              </div>
                
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>