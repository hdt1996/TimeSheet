<div class="disflxcctr table-wrapper">
    <% if !current_user %>
        <div style="color:red;font-size:1.5em;display:flex;justify-content:center;align-items:center,flex:1">
            Please sign in to use this feature.
        </div>
    <% elsif !current_user.admin? %>
        <div style="color:red;font-size:1.5em;display:flex;justify-content:center;align-items:center,flex:1">
            Improper permissions. Please consult with your administrator.
        </div>
    <% else %>
        <% if @users.length > 0 %>
            <br/>
            <div>
                
                <div class="d-flex flex-row table-mgmt nochildlinks" >
                    <div class="disflxrstart" style="width:fit-content;">
                        <h2 >User Management</h2>
                    </div>

                    <div class="disflxrctr" style="flex:1; justify-content: flex-end">
                        <div class="p-2 table-mgmt-opt">
                            <%= button_to "Export CSV", export_admin_users_path(format: :csv), :class => "btn btn-success p-2", :method => :get %>
                        </div>
                        <div class="p-2 table-mgmt-opt">
                            <%= button_to "Add Users", new_admin_user_path, :class => "btn btn-success p-2", :method => :get %>
                        </div>
                    </div>
                </div>

                <div class="d-flex flex-row justify-content-between nochildlinks" style="margin-left:auto;width:fit-content; padding-top:.5em; padding-bottom:.5em;">
                    <div class="px-1">
                        Page
                    </div>
                    <% if @page > 0%>
                        <div class="px-1">
                            <%= link_to @page - 1, admin_users_path(:page => @page - 1)%>
                        </div>
                    <% end %>
                    <div class="px-1" style="border-bottom:solid black .1em">
                        <%= link_to @page, admin_users_path(:page => @page)%>
                    </div>
                    <div class="px-1">
                        <%= link_to @page + 1, admin_users_path(:page => @page + 1)%>
                    </div>
                </div>

                <table class="table table-dark table-striped table-bordered" data-sort-order="asc">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th>Username</th>
                            <th>Role</th>
                            <th>Email</th>
                            <th>Created</th>
                            <th>Updated</th>
                            <th>Staff</th>
                            <th>User</th>

                        </tr>
                    </thead>
                    <tbody>
                        <% @users.each do |user| %>
                        <tr>
                            <td><%= user.id %></td>
                            <td><%= user.username %></td>
                            <td><%= user.role %></td>
                            <td><%= user.created_at %></td>
                            <td><%= user.updated_at %></td>
                            <td><%= user.email %></td>
                            <% if user.employee %>
                                <td>
                                    <%= link_to user.employee.id, employee_path({:id => user.employee}), method: :get%>
                                </td>
                            <% else %>
                                <td><%= link_to "Set", new_employee_path({:user_id => user}), method: :get%></td>
                            <% end %>
                            <td><%= link_to "Edit", edit_user_registration_path(user)%></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        <% end %>
    <% end %>
</div>