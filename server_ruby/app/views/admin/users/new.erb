<section class="h-100 h-custom w-100" style="background-color: #8fc4b7;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card rounded-3">
          <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img3.webp"
            class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
            alt="Sample photo">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Employee Registration</h3>

            
            <%= form_with url: admin_users_path, method: :post , class: "px-md-2" do |f| %>  <!-- has_one relationship -->
              <div class="form-outline mb-4">
                  <label class="form-label" >CSV</label>
                  <%= f.file_field :csv, accept: 'image/png,image/jpeg', class: "form-control"%>
              </div>
              <%= f.submit "Submit" , class: "btn btn-success btn-lg mb-1"%>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>