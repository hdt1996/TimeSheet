<section class="vh-100 vw-100 bg-dark">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col h-100">
        <div class="card card-registration h-100">
          <div class="row g-0 h-100">
            <div class="col-xl-6 d-none d-xl-block ovrflw-hidden" style="position:relative">
              <%= image_tag 'login_image.jpg', class: "img-fluid login-image", alt: "" %>
            </div>
            <div class="col-xl-6">
              <div class="card-body p-md-5 text-black">
                <h3 class="mb-5 text-uppercase">Forgot your password?</h3>
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "card-body p-md-5 text-black") do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example8">Recovery Email</label>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
                  </div>
                  
                <div class="actions">
                  <%= f.submit "Send me password reset instructions", class: "lgn-button", style: "font-size: 1.25em"%>
                </div>
                <% end %>
                <br/>
                <div class="lgn-options disflxcleft nochildlinks" style="font-size: 1.25em">
                  <%= render "devise/shared/links"%>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>